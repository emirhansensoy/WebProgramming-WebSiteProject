@model WebSite.Models.Movie

@{
    ViewData["Title"] = ViewData["UpdateMovie"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-light">@ViewData["UpdateMovie"]</h1>
<hr />
<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="UpdateMovie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>@ViewData["Title"]</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@ViewData["Description"]</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@ViewData["ImageURL"]</label>
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@ViewData["CategoryId"]</label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@ViewData["ImdbRating"]</label>
                <input asp-for="ImdbRating" class="form-control" />
                <span asp-validation-for="ImdbRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@ViewData["MovieStormRating"]</label>
                <input asp-for="MovieStormRating" class="form-control" />
                <span asp-validation-for="MovieStormRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListMovies">@ViewData["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
